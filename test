apiVersion: apps/v1
kind: Deployment
metadata:
  name: angular-nginx-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: angular-nginx-app
  template:
    metadata:
      labels:
        app: angular-nginx-app
    spec:
      containers:
      - name: angular-nginx
        image: your-dockerhub-user/angular-nginx-app:latest
        volumeMounts:
        - name: banner-config
          mountPath: /etc/nginx/banner.html
          subPath: banner.html
        - name: banner-config
          mountPath: /etc/nginx/enable_maintenance.flag
          subPath: enable_maintenance.flag
        - name: nginx-config
          mountPath: /etc/nginx/nginx.conf
          subPath: nginx.conf
        ports:
        - containerPort: 80
      volumes:
      - name: banner-config
        configMap:
          name: maintenance-banner
      - name: nginx-config
        configMap:
          name: custom-nginx-config
